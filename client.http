# Variables
@baseUrl = http://localhost:3333

###

# Get rooms
# @name getRooms
GET {{baseUrl}}/rooms
# GET {{baseUrl}}/rooms?page=1
# GET {{baseUrl}}/rooms?page=1&pageSize=10
# GET {{baseUrl}}/rooms?pageSize=20

###

# Get room
# @name getRoom
# has audio recorded = true
# GET {{baseUrl}}/rooms/529ae04-037b-49fd-93e4-3207e223461a
# has audio recorded = false
GET {{baseUrl}}/rooms/9f83f6d2-a1bc-478a-a8b2-553d44de4d93

###

# Get room
# @name getRoomAudioCheck
# has audio recorded = true
# GET {{baseUrl}}/rooms/529ae04-037b-49fd-93e4-3207e223461a
# has audio recorded = false
GET {{baseUrl}}/rooms/9f83f6d2-a1bc-478a-a8b2-553d44de4d93/audio

###

# Create room
# @name createRoom
POST {{baseUrl}}/rooms
Content-Type: application/json

{
  "name": "Test room 5",
  "description": "This is a test room"
}

###

@roomId = {{createRoom.response.body.$.roomId}}
# @roomId = {{getRooms.response.body.$.[0].id}}

###

# Get room questions
# @name getRoomQuestions
GET {{baseUrl}}/rooms/{{roomId}}/questions

###

# Create question in a room
# @name createQuestion
POST {{baseUrl}}/rooms/{{roomId}}/questions
Content-Type: application/json

# Good question
{
  "question": "What is React.js?"
}

