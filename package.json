{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "local:start": "node --env-file .env build/server.cjs",
    "dev": "node --env-file .env --experimental-strip-types --no-warnings --watch src/server.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:prod": "NODE_ENV=production build/database/migrate.cjs",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --env-file .env --experimental-strip-types --no-warnings src/database/seed.ts",
    "build": "tsup src --clean --out-dir build --entry 'src/**/*.ts' --entry '!src/**/*.spec.ts' --entry '!src/database/seed.ts'",
    "start": "node build/server.cjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/node": "^24.0.10",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "typescript": "^5.8.3",
    "ultracite": "5.0.32"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "@fastify/multipart": "^9.0.3",
    "@google/genai": "^1.9.0",
    "drizzle-orm": "^0.44.2",
    "fastify": "^5.4.0",
    "fastify-type-provider-zod": "^5.0.1",
    "postgres": "^3.4.7",
    "zod": "^3.25.75",
    "tsup": "^8.5.0"
  }
}
